<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs')%>

    <head>
        <link rel="stylesheet" href="/userStyle.css">
    </head>

    <body>
        <%- include('../partials/header.ejs')%>
            <main>
                <div class="container">
                    <h2>Sign In</h2>
                    <form id="signin" onsubmit="event.preventDefault(); getCredentials()">
                        <input type="email" placeholder="Email" id="email" autocomplete="on" required>
                        <input type="password" placeholder="Password" id="password" required>
                        <div id="forgot">
                            <div id="rememberContainer"><input type="checkbox" id="remember" value="remember"><label
                                    for="remember"> Remember
                                    Me</label></div>
                            <p>Forgot password? <a href="#" id="forgot-tag"
                                    onclick="event.preventDefault(); forgotPassword()">Click
                                    here</a></p>
                        </div>
                        <input type="submit" value="Login" class="submit">
                        <div class="already">
                            <p>Don't have an account? <a href="#" onclick="event.preventDefault(); showSignUp()"
                                    id="signup-tag">Sign up</a></p>
                        </div>
                    </form>
                    <form id="signup" style="display: none;" onsubmit="event.preventDefault(); signUp()">
                        <input type="text" placeholder="Full name" id="name-signup" required>
                        <input type="email" placeholder="Email" id="email-signup" required>
                        <input type="password" placeholder="Password" id="password-signup" required>
                        <input type="password" placeholder="Confirm Password" id="confirm-signup" required>
                        <input type="submit" value="Sign Up" class="submit">
                        <div class="already">
                            <p>Already have an account? <a href="#" onclick="event.preventDefault(); showSignIn()"
                                    id="signin-tag">Sign
                                    In</a></p>
                        </div>
                    </form>
                </div>
            </main>
            <%- include('../partials/footer.ejs')%>

                <script>
                    let server_url = '<%- url %>'
                </script>

                <script src="/nav.js"></script>
                <script src="/userScript.js"></script>

    </body>

</html>